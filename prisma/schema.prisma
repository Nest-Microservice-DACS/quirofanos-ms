generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum OperatingRoomStatus {
  AVAILABLE
  OCCUPIED
  UNDER_MAINTENANCE
}

model OperatingRoom {
  id        Int             @id @default(autoincrement())
  name      String          @unique
  status    OperatingRoomStatus @default(AVAILABLE)
  location  String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}
