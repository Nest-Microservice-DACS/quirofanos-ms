generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum QuirofanoEstado {
  DISPONIBLE
  OCUPADO
  MANTENIMIENTO
}

model Quirofano {
  id        Int             @id @default(autoincrement())
  nombre    String          @unique
  estado    QuirofanoEstado @default(DISPONIBLE)
  ubicacion String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}
